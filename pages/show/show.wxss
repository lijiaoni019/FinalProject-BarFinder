.showBannerImg {
  width: 100%;
  height: 240px;
  background-size: cover;
  background-position: center;
  object-fit: cover;
}

.container {
  padding: 0 32rpx;
  font-family: "Poppins";
}

.header {
  font-size: 56rpx;
  font-weight: bolder;
  color: black;
  margin-top: 16rpx;
}

.description-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 16px;
  padding-top: 0px;
  border-bottom: 1px solid rgba(231, 48, 91, 0.4);
}

.meter-container {
  display: flex;
  flex-direction: column;
  padding: 16px 0;
}

.meter-container .flex-container {
  display: flex;
  align-items: center;
}

.meter-container .dynamic-bar {
  height: 24rpx;
  border-radius: 80rpx;
  margin-left: 32rpx;
}

.meter-container .meter-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 16rpx 0;
}

.meter-container .count {
  margin-left: 32rpx;
  flex-shrink: 0;
}

.filter-container {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid rgba(231, 48, 91, 0.4);
}

.filter-container .food-icon {
  width: 80rpx;
  height: 80rpx;
}

.filter {
  border: 1px solid #E7305B;
  border-radius: 4px;
  padding: 8px 16px;
  background:  #E7305B;
  color: white;
  margin-right: 32rpx;
}

.address-container {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid rgba(231, 48, 91, 0.4);
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  padding-right: 8rpx;
}

.subheader {
  font-size: 32rpx;
  font-weight: bolder;
  margin-top: 16rpx;
}

.rating-container {
  margin-top: 16rpx ;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.rating-btn-container{
  width: 320rpx;
  height: 96rpx;
  border: 1px solid #E7305B;
  background: white;
  border-radius: 4px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 320rpx !important;
  height: 96rpx !important;
  border-radius: 4px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #E7305B;
  color: #E7305B;
  margin: 0 !important;
}

button:disabled {
  background: black !important;
}



.btn-active {
  background: #E7305B;
  color: white;
}

.rating-icon {
  width: 72rpx;
  height: 72rpx;
}

.save-btn {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 136rpx;
  height: 48rpx;
  font-size: 24rpx;
  border: 1px solid #FFC7C7;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFC7C7;
}

.active-save-btn {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 136rpx;
  height: 48rpx;
  font-size: 24rpx;
  background: #E7305B;
  color: white;
  border: 1px solid #E7305B;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.share-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px 0;
}

.share-btn {
  width: 100% !important;
  height: 96rpx;
  border: 1px solid #E7305B;
  background: white;
  border-radius: 4px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 40rpx;
  font-weight: bolder;
  color: white;
  background: #E7305B;
}