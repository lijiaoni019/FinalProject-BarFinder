.card-product {
  overflow: hidden;
  background: white;
  box-shadow:0px 0px 8px rgba(0, 0, 0, 0.25);
  display: flex;
  flex-direction: column;
  border-radius: 4px;
  font-family: 'Poppins';
}

.card-product .image {
  height: 210px;
  width: 100%;
  object-fit: cover;
  flex-shrink: 0;
}

.card-product {
  font-size: 14px;
  font-weight: bold;
  margin: 0;
}

.meter-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 32rpx;
}

.meter-container .flex-container {
  display: flex;
  align-items: center;
}

.meter-container .dynamic-bar {
  height: 24rpx;
  border-radius: 80rpx;
  margin-left: 32rpx;
  background: #E7305B;
}

.meter-container .meter-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 16rpx 0;
}

.meter-container .count {
  margin-left: 32rpx;
  flex-shrink: 0;
}
