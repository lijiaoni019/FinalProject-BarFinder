.card-product {
  overflow: hidden;
  background: white;
  box-shadow:0px 0px 8px rgba(0, 0, 0, 0.25);
  display: flex;
  flex-direction: column;
  border-radius: 4px;
}


.card-product image {
  height: 210px;
  width: 100%;
  object-fit: cover;
  flex-shrink: 0;
}

.card-product h2 {
  font-size: 14px;
  font-weight: bold;
  margin: 0;
}

.card-product p {
  font-size: 12px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
}

.card-product .card-product-infos {
  padding: 0 4px;
}
